<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<link rel="stylesheet" type="text/css" href="admin-homepage.css" />

	</head>
	<body>
		<ul>
			<li><a href="/logout">LOG OUT</a></li>
		  </ul>
		<div class="add-employee-form">
            <form id="admin-form" class="form" autoComplete="off">
                <label class="name-label">Employee name:</label>
				<input type="text" name="name" class="name-input"/>
				<br>
				<label class="email-label">Employee email:</label>
				<input type="text" name="email" class="email-input"/>
				<br>
                <button type="submit" class="add-btn">ADD</button>
            </form>
		</div>
		<div class="employee-list-form">
            <section id="table">
                <div class="table">
            
                    <div id="headers">
                        <span id="name">Name</span>
                        <span id="email">Email</span>
                    </div>
            
                    <% for(var i = 0; i < employees.length; i++) { %>
                            <form class="tr" action="handleForm">
                                <input type="text" name="name" class="td" value= <%= employees[i].name %>>
                                <input type="text" name="email" class="td" value= <%= employees[i].email %>>
                            </form>
                    <% } %>     
                </div>
            </section>
        </div>
	</body>
	
</html>

