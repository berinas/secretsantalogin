<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="login.css" />
    <link rel="stylesheet" type="text/css" href="admin-homepage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body>
    <ul>
        <li><a href="/logout">LOG OUT</a></li>
        <li><a href="/generate" class="generate-btn">GENERATE</a></li>
    </ul>
    <div class="header">
        <img src="santa.jpg" alt="logo">
        <h1 class="animate__animated animate__swing">Welcome Admin</h1>
        <h3>Happy New Year!</h3>
    </div>
    <div class="add-employee-form">
        <form id="admin-form" class="form" autoComplete="off" action="/adduser" method="post">
            <label class="name-label">Employee name:</label>
            <input type="text" name="name" class="name-input" id="name" />
            <br>
            <label class="email-label">Employee email:</label>
            <input type="text" name="email" class="email-input" id="email" />
            <br>
            <label for="roles" class="roles-label">Choose a role:</label>
            <select name="roles" class="roles" id="roles">
                <option name="employee" value="Employee" selected>Employee</option>
                <option name="admin" value="Admin">Admin</option>
            </select>
            <br>
            <button type="submit" class="add-btn">ADD</button>
        </form>
    </div>
    <div class="employee-list-form">
        <section id="table">
            <div class="table">
                <table border="0">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email address</th>
                        <th>Paired employee name</th>
                        <th>Action</th>
                    </tr>
                    <%
                        if(employees.length != 0){
                        employees.forEach(function(data){
                        %>
                    <tr>
                        <td><%=data.id %></td>
                        <td><%=data.name %></td>
                        <td><%=data.email %></td>
                        <td><%=data.pair %></td>
                        <td><a href="/deleteuser/<%= data.id %>" method="get" class="delete-btn">DELETE</a></td>
                    </tr>
                    <% }) %>
                    <% } else { %>
                    <tr>
                        <td colspan="4">No Data Found</td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </section>
    </div>
</body>

</html>